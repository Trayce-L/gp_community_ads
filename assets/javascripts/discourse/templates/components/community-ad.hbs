            </div>
        {{else if divId_dc}}
            <div class="community-ad-label"><h2>{{i18n 'adplugin.advertisement_label'}}</h2></div>
            <div id={{divId}} style={{adWrapperStyle}} class="dfp-ad-unit" align=center>
            <script>if(detectWidth() > 980){googletag.cmd.push(function() {googletag.display('div-ad-Community_Desktop_Leaderboard_C');});}</script>
            </div>
        {{else if divId_dd}}
            <div class="community-ad-label"><h2>{{i18n 'adplugin.advertisement_label'}}</h2></div>
            <div id={{divId}} style={{adWrapperStyle}} class="dfp-ad-unit" align=center>
            <script>if(detectWidth() > 980){googletag.cmd.push(function() {googletag.display('div-ad-Community_Desktop_Leaderboard_D');});}</script>
            </div>
        {{/if}}
    {{/if}}
{{/if}}